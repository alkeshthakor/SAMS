<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical"
    android:background="@color/title_blue"
    tools:context=".ProductListActivity" >
      
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:text="@string/lbl_docno"/>
         <TextView 
	        style="@style/style_TextView_white"
	        android:id="@+id/docNoTextView"
	        android:layout_width="60dp"
	        android:gravity="center"/>
        <TextView 
	        style="@style/style_TextView_black"
	        android:layout_marginLeft="10dp"
	        android:text="@string/lbl_cntcode"/>
         <TextView 
	        style="@style/style_TextView_white"
	        android:layout_width="60dp"
	        android:gravity="center"
	        android:id="@+id/cntcodeDocTextView"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:text="@string/lbl_shift"/>

        <TextView
            android:id="@+id/shiftDocTextView"
            style="@style/style_TextView_white"
            android:layout_width="60dp"
            android:gravity="center"
            android:singleLine="true" />
        
        <TextView 
	        style="@style/style_TextView_black"
	        android:layout_marginLeft="10dp"
	        android:text="@string/lbl_dumpdate"/>
         <TextView 
	        style="@style/style_TextView_white"
	        android:layout_width="130dp"
	        android:gravity="center"
	        android:id="@+id/dateDocTextView"/>
         
    </LinearLayout>
   
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:textStyle="bold"
        android:layout_marginLeft="80dp"
        android:text="@string/lbl_old"/>
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="@string/lbl_new"/>         

    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="75dp"
        android:text="@string/lbl_socitycode"/>
        <TextView
            android:id="@+id/socCodeOldDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginRight="5dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/socCodeNewDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />         

    </LinearLayout>
    
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="75dp"
        android:text="@string/lbl_socityname"/>
        <TextView
            android:id="@+id/socNameOldDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginRight="5dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/socNameNewDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />         

    </LinearLayout>
    
      <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="75dp"
        android:text="@string/lbl_type"/>
        <TextView
            android:id="@+id/typeOldDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginRight="5dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/typeNewDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />         

    </LinearLayout>
    
       <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="75dp"
        android:text="@string/lbl_weight"/>
        <TextView
            android:id="@+id/weightOldDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginRight="5dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/weightNewDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />         

    </LinearLayout>
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <TextView 
        style="@style/style_TextView_black"
        android:layout_width="75dp"
        android:text="@string/lbl_did"/>
        <TextView
            android:id="@+id/didOldDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginRight="5dp"
            android:singleLine="true" />
        <TextView
            android:id="@+id/didNewDocTV"
            style="@style/style_TextView_white"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginLeft="5dp"
            android:singleLine="true" />         

    </LinearLayout>
</LinearLayout>